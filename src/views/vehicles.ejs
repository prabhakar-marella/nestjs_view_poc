<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Inventory â€” Vehicles</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <style>
    body { padding: 20px; }
    table { width: 100%; }
  </style>
</head>
<body>
  <div class="container">
    <h1>Vehicles Inventory</h1>
    <p>Showing <%= vehicles.length %> vehicles</p>

    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Make</th>
          <th>Model</th>
          <th>Year</th>
          <th>Listing Type</th>
        </tr>
      </thead>
      <tbody>
        <% vehicles.forEach(function(v) { %>
          <tr>
            <td><%= v.id %></td>
            <td><%= v.make %></td>
            <td><%= v.model %></td>
            <td><%= v.year %></td>
            <td><%= v.veh_listing_type %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>